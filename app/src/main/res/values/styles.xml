<resources>

    <style name="Theme.PBAP" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeOverlay.AppCompat.DayNight" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.Design.IconTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.Design.IconTab</item>
    </style>

    <style name="TextAppearance.Design.IconTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="CardView.Base">
        <item name="android:layout_marginStart">@dimen/content_padding_mini</item>
        <item name="android:layout_marginEnd">@dimen/content_padding_mini</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="cardCornerRadius">@dimen/cardview_default_radius</item>
    </style>

    <style name="CardView.DayNight" parent="CardView.Base">
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
    </style>

    <style name="TextAppearance.AppCompat.Headline2" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">18sp</item>
    </style>
</resources>